<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnapphaneScoutDistriktBookingApp.Canoe"
             Title="Canoe">
    <VerticalStackLayout>
        <Label 
            Text="Boka kanoter"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="myName"
            Placeholder="För- och efternamn"
            ></Entry>
        <Entry
            x:Name="myPhone"
            Placeholder="Telefonnummer"
            ></Entry>
        <Entry
            x:Name="myEmail"
            Placeholder="Email"
            ></Entry>

        <Label
            Text="Välj startdatum"
            ></Label>
        <DatePicker
            MinimumDate="{x:Static sys:DateTime.Today}"
            ></DatePicker>
        <Label
            Text="Välj slutdatum"
            ></Label>
        <DatePicker
            MinimumDate="{x:Static sys:DateTime.Today}"
            ></DatePicker>
        <CheckBox
            x:Name="myCheckBox"
            IsChecked="False"
            CheckedChanged="OnCheckChange"
            ></CheckBox>
        <Label
            x:Name="statusLabel"
            Text="Kryssa i om du är scoutmedlem."
            ></Label>
        <Label
            x:Name="hiddenLabel"
            IsVisible="False"
            Text="Vilken scoutkår tillhör du?"
            ></Label>
        <Entry
            x:Name="orgNameInput"
            Placeholder="Scoutkår"
            IsVisible="False"
            ></Entry>
        <Button
            x:Name="Conformation"
            Text="Infyllt rätt"
            Clicked="OnConformation"
            ></Button>
    </VerticalStackLayout>
</ContentPage>